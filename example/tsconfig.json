{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es6", "dom"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": "src"
    },
    "exclude": [
        "node_modules",
        "dist",
        "example",
        "test"
    ]
}
